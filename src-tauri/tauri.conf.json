{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "JARVIS Protocol",
  "version": "1.0.0",
  "identifier": "com.jarvis.protocol",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "J.A.R.V.I.S. Protocol",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "shell:allow-execute",
            "shell:allow-open"
          ]
        }
      ]
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      }
    },
    "longDescription": "J.A.R.V.I.S. Protocol - An advanced AI interface with real-time voice interaction, multimodal vision analysis, and smart home control simulation.",
    "shortDescription": "Advanced AI Interface System"
  }
}